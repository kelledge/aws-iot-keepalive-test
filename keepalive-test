import boto3
import time
import atexit
import logging
import sys
import pprint

from AWSIoTPythonSDK.MQTTLib import AWSIoTMQTTShadowClient
from AWSIoTPythonSDK.MQTTLib import AWSIoTMQTTClient
from tempfile import NamedTemporaryFile


